{
  "name": "opencode-personality",
  "version": "1.1.0",
  "description": "Configurable personality and mood system plugin for OpenCode",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "personalities",
    "schema"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external && tsc --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "generate-schema": "bun run bin/generate-schema.ts"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "personality",
    "mood",
    "ai",
    "assistant"
  ],
  "author": "Joost van Wollingen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joostvanwollingen/opencode-personality.git"
  },
  "bugs": {
    "url": "https://github.com/joostvanwollingen/opencode-personality/issues"
  },
  "homepage": "https://github.com/joostvanwollingen/opencode-personality#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.48",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "bun-types": "^1.2.2",
    "eslint": "^9.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^4.1.8"
  }
}
