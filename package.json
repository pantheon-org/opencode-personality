{
  "name": "opencode-personality",
  "version": "1.1.0",
  "description": "Configurable personality and mood system plugin for OpenCode",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "personalities",
    "schema"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm --sourcemap=external && tsc --emitDeclarationOnly",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --write .",
    "format": "bunx @biomejs/biome format --write .",
    "typecheck": "bunx tsc --noEmit",
    "hooks:install": "bunx lefthook install",
    "hooks:uninstall": "bunx lefthook uninstall",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "generate-schema": "bun run bin/generate-schema.ts",
    "dev": "node scripts/config-dev.js",
    "prod": "node scripts/config-prod.js"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "personality",
    "mood",
    "ai",
    "assistant"
  ],
  "author": "Joost van Wollingen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joostvanwollingen/opencode-personality.git"
  },
  "bugs": {
    "url": "https://github.com/joostvanwollingen/opencode-personality/issues"
  },
  "homepage": "https://github.com/joostvanwollingen/opencode-personality#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.48",
    "@types/bun": "^1.3.9",
    "@types/node": "^25.2.3",
    "biome": "^0.3.3",
    "bun-types": "^1.2.2",
    "lefthook": "^2.1.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "zod": "^4.1.8"
  }
}
